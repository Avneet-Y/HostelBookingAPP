<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.homeFragment"
    android:background="#FFFFFF"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/_45sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardMaxElevation="@dimen/_20sdp"
                    app:cardElevation="10dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_180sdp"
                        android:id="@+id/imageView_hostels"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_5"
                        android:maxHeight="@dimen/_200sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_15sdp"
                    android:background="@drawable/btn_bg_home"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="MEGA BOYS HOSTEL A"
                    android:paddingLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_12sdp"
                    android:drawableStart="@drawable/hostel2"
                    android:id="@+id/btnMghA"
                    />

                <androidx.appcompat.widget.AppCompatButton

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/_15sdp"
                    android:padding="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:background="@drawable/btn_bg_home"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="MEGA BOYS HOSTEL B"
                    android:textSize="@dimen/_12sdp"
                    android:drawableStart="@drawable/hostel2"
                    android:id="@+id/btnMghB"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                >
                <androidx.appcompat.widget.AppCompatButton

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/_15sdp"
                    android:padding="@dimen/_15sdp"
                    android:background="@drawable/btn_bg_home"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="MEGA BOYS HOSTEL F"
                    android:textSize="@dimen/_12sdp"
                    android:drawableStart="@drawable/hostel2"
                    android:id="@+id/btnMghF"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_15sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/btn_bg_home"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="MEGA GIRLS HOSTEL"
                    android:textSize="@dimen/_12sdp"
                    android:drawableStart="@drawable/hostel2"
                    android:id="@+id/btnMegaGirls"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                >
                <androidx.appcompat.widget.AppCompatButton

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/_15sdp"
                    android:padding="@dimen/_15sdp"
                    android:background="@drawable/btn_bg_home"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="HOSTEL POLICY"
                    android:textSize="@dimen/_12sdp"
                    android:drawableLeft="@drawable/hostel_policy"
                    android:id="@+id/HostelPolicy"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                >
                <androidx.appcompat.widget.AppCompatButton

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/_15sdp"
                    android:padding="@dimen/_15sdp"
                    android:background="@drawable/btn_bg_home"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text="HOSTEL STAFF"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:drawablePadding="@dimen/_2sdp"
                    android:drawableStart="@drawable/hostel_staff2"
                    android:id="@+id/Hostel_Staff"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                >
                <androidx.appcompat.widget.AppCompatButton

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/_15sdp"
                    android:padding="@dimen/_15sdp"
                    android:background="@drawable/btn_bg_home"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text="HOSTEL STAFF"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:drawablePadding="@dimen/_2sdp"
                    android:drawableStart="@drawable/hostel_staff2"
                    android:id="@+id/Hostel_Staff1"
                    />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/purple_500"
            app:fabAlignmentMode="center"
            app:fabAnimationMode="slide"
            app:fabCradleVerticalOffset="@dimen/_2sdp"
            >

        </com.google.android.material.bottomappbar.BottomAppBar>

