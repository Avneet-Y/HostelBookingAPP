            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardCornerRadius="@dimen/_13sdp"
                app:cardMaxElevation="@dimen/_20sdp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#DFE3E3"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_6sdp"
                    android:background="@color/button"
android:textColor="@color/white"
                    android:text="BOYS\nHOSTEL 7"
                    android:drawableLeft="@drawable/hostel2"
                    android:id="@+id/btnHostel7"

                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardCornerRadius="@dimen/_13sdp"
                app:cardMaxElevation="@dimen/_20sdp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#DFE3E3"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_6sdp"
                    android:background="@color/button"
                    android:textColor="@color/white"
                    android:text="BOYS \nHOSTEL 4"
                    android:drawableLeft="@drawable/hostel2"
                    android:id="@+id/btnHostel4"

                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardCornerRadius="@dimen/_13sdp"
                app:cardMaxElevation="@dimen/_20sdp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#DFE3E3"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_6sdp"
